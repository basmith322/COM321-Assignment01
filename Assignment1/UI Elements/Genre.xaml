<UserControl x:Class="Assignment1.Genre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment1"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="175">
    <Grid>
        <GroupBox x:Name="grpBoxGenre" Header="Genre">
            <WrapPanel>
                <CheckBox x:Name="chkComedy" Content="Comedy" Margin="3" />
                <CheckBox x:Name="chkRomance" Content="Romance" Margin="3" />
                <CheckBox x:Name="chkAction" Content="Action" Margin="3" />
                <CheckBox x:Name="chkThriller" Content="Thriller" Margin="3" />
                <CheckBox x:Name="chkFamily" Content="Family" Margin="3" />
                <CheckBox x:Name="chkHorror" Content="Horror" Margin="3" />
                <CheckBox x:Name="chkWestern" Content="Western" Margin="3" />
                <CheckBox x:Name="chkSciFi" Content="Scifi" Margin="3" />
                <CheckBox x:Name="chkWar" Content="War" Margin="3" />
            </WrapPanel>
        </GroupBox>
    </Grid>
</UserControl>
