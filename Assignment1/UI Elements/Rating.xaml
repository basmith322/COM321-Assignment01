<UserControl x:Class="Assignment1.Rating"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment1"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="175">
    <Grid>
        <GroupBox x:Name="grpBoxRating" Header="Rating" Grid.Column="1">
            <WrapPanel x:Name="stkPnlRating" Orientation="Horizontal">
                <RadioButton x:Name="radBtnOne" Content="1" Margin="3"/>
                <RadioButton x:Name="radBtnTwo" Content="2" Margin="3"/>
                <RadioButton x:Name="radBtnThree" Content="3" Margin="3"/>
                <RadioButton x:Name="radBtnFour" Content="4" Margin="3"/>
                <RadioButton x:Name="radBtnFive" Content="5" Margin="3"/>
            </WrapPanel>
        </GroupBox>

    </Grid>
</UserControl>
